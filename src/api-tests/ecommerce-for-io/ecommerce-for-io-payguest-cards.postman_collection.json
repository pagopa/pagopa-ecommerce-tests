		{
			"name": "Create payment method session to get orderId",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const sdk = require('postman-collection');",
							"",
							"pm.test(\"[ecommerce for IO - Guest Cards] - Create payment method session\", function () {",
							"  pm.response.to.have.status(200);",
							"  const responseJson = pm.response.json();",
							"  ",
							"  pm.expect(responseJson.orderId).to.be.a('string');",
							"  pm.expect(responseJson.correlationId).to.be.a('string');",
							"  pm.expect(responseJson.paymentMethodData).to.be.an('object');",
							"  pm.expect(responseJson.paymentMethodData.paymentMethod).to.equal('CARDS');",
							"  pm.expect(responseJson.paymentMethodData.form).to.be.an('array');",
							"  ",
							"  pm.environment.set('ORDER_ID', responseJson.orderId);",
							"  ",
							"  // extract npg session data from form src URL",
							"  saveNpgData(responseJson);",
							"  ",
							"  console.log(`Order ID retrieved: ${responseJson.orderId}`);",
							"  console.log(`Correlation ID: ${responseJson.correlationId}`);",
							"});",
							"",
							"function saveNpgData(response) {",
							"  console.log('Extracting NPG session data...');",
							"  const fieldUrl = response.paymentMethodData.form[0].src;",
							"  ",
							"  const parsedUrl = new sdk.Url(fieldUrl).toJSON();",
							"  const correlationId = parsedUrl.query.find((queryParam) => queryParam.key === 'correlationid').value;",
							"  const sessionId = parsedUrl.query.find((queryParam) => queryParam.key === 'sessionid').value.replaceAll('%2F', '/').replaceAll('%2B', '+').replaceAll('%3D', '=');",
							"  const fieldId = parsedUrl.query.find((queryParam) => queryParam.key === 'id').value;",
							"  ",
							"  console.log(`Correlation ID: [${correlationId}]`);",
                            "  console.log(`Session ID: [${sessionId.substring(0, 6)}***]`);",
							"  console.log(`Field ID: [${fieldId}]`);",
							"  ",
							"  pm.environment.set('NPG_CORRELATION_ID', correlationId);",
							"  pm.environment.set('NPG_SESSION_ID', sessionId);",
							"  pm.environment.set('NPG_IFRAME_FIELD_URL', fieldUrl);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{WEBVIEW_SESSION_TOKEN}}",

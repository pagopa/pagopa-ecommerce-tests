		{
			"name": "Create payment method session to get orderId",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const sdk = require('postman-collection');",
							"",
							"pm.test(\"[ecommerce for IO - Guest Cards] - Create payment method session\", function () {",
							"  pm.response.to.have.status(200);",
							"  const responseJson = pm.response.json();",
							"  ",
							"  pm.expect(responseJson.orderId).to.be.a('string');",
							"  pm.expect(responseJson.correlationId).to.be.a('string');",
							"  pm.expect(responseJson.paymentMethodData).to.be.an('object');",
							"  pm.expect(responseJson.paymentMethodData.paymentMethod).to.equal('CARDS');",
							"  pm.expect(responseJson.paymentMethodData.form).to.be.an('array');",
							"  ",
							"  pm.environment.set('ORDER_ID', responseJson.orderId);",
							"  pm.environment.set('CORRELATION_ID', responseJson.correlationId);",
							"  ",
							"  console.log(`Order ID retrieved: ${responseJson.orderId}`);",
							"  console.log(`Correlation ID: ${responseJson.correlationId}`);",
							"  ",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],

		{
			"name": "Get method redirect url",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"[ecommerce for IO - Guest Cards] - Get redirect URL\", function () {",
							"  pm.response.to.have.status(200);",
							"  const responseJson = pm.response.json();",
							"  pm.expect(responseJson.redirectUrl).to.be.a('string');",
							"  pm.expect(responseJson.redirectUrl).to.include('scelta-salvataggio-carta');",
							"  ",
							"  // extract session token from redirectUrl",
							"  const redirectUrl = responseJson.redirectUrl;",
							"  const sessionTokenMatch = redirectUrl.match(/[?&#]sessionToken=([^&#]+)/);",
							"  ",
							"  if (sessionTokenMatch && sessionTokenMatch[1]) {",
							"    const sessionToken = sessionTokenMatch[1];",
							"    pm.environment.set('WEBVIEW_SESSION_TOKEN', sessionToken);",
							"    console.log('Session token extracted from redirect URL');",
							"  } else {",
							"    throw new Error('Could not extract sessionToken from redirectUrl');",
							"  }",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
			"request": {
				"auth": {

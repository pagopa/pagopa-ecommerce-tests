		{
			"name": "Start new eCommerce transaction",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"[ecommerce for IO - Guest Cards] - Activate ecommerce transaction\", () => {",
							"  pm.response.to.have.status(200);",
							"  const responseJson = pm.response.json();",
							"  pm.expect(responseJson.transactionId).to.be.a('string');",
							"  pm.expect(responseJson.authToken).to.be.a('string');",
							"  pm.expect(responseJson.status).to.equal('ACTIVATED');",
							"  ",
							"  pm.environment.set(\"TRANSACTION_ID\", responseJson.transactionId);",
							"  ",
							"  // check we have the orderId from the previous session creation step",
							"  const orderId = pm.environment.get('ORDER_ID');",
							"  if (!orderId || orderId === 'ORDER_ID') {",
							"    throw new Error('Valid orderId not found in environment');",
							"  }",
							"  ",
							"  console.log(`Transaction created - ID: ${responseJson.transactionId}`);",
							"  console.log(`Using orderId from session: ${orderId}`);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],

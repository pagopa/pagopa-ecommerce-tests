        {
          "name": "Create wallet for transaction",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"[ecommerce for IO - Contextual Onboarding] - Create wallet\", function () {",
                  "  pm.response.to.have.status(201);",
                  "  const responseJson = pm.response.json();",
                  "  ",
                  "  pm.expect(responseJson.walletId).to.be.a('string');",
                  "  pm.expect(responseJson.redirectUrl).to.be.a('string');",
                  "  ",
                  "  pm.environment.set('WALLET_ID', responseJson.walletId);",
                  "  console.log(`Wallet created - ID: ${responseJson.walletId}`);",
                  "  ",
                  "  // extract sessionToken from redirectUrl",
                  "  const redirectUrl = responseJson.redirectUrl;",
                  "  const match = redirectUrl.match(/[?&]sessionToken=([^&]+)/);",
                  "  ",
                  "  if (match && match[1]) {",
                  "    pm.environment.set('WALLET_JWT_TOKEN', match[1]);",
                  "    console.log('Wallet JWT token extracted successfully');",
                  "  } else {",
                  "    console.warn('Could not extract sessionToken from redirectUrl, falling back to main SESSION_TOKEN');",
                  "    pm.environment.set('WALLET_JWT_TOKEN', pm.environment.get('SESSION_TOKEN'));",
                  "  }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{WEBVIEW_SESSION_TOKEN}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "x-ecommerce-session-token",
                "value": "{{ECOMMERCE_AUTH_TOKEN}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"useDiagnosticTracing\": true,\n    \"paymentMethodId\": \"{{PAYMENT_METHOD_ID}}\",\n    \"amount\": \"{{AMOUNT}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{HOSTNAME}}/ecommerce/webview/v1/transactions/{{TRANSACTION_ID}}/wallets",
              "host": [
                "{{HOSTNAME}}"
              ],
              "path": [
                "ecommerce",
                "webview",
                "v1",
                "transactions",
                "{{TRANSACTION_ID}}",
                "wallets"
              ]
            }
          },
          "response": []
        },

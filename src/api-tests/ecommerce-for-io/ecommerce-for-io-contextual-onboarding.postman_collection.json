		{
			"name": "Payment Info by rptId",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"[ecommerce for IO - Contextual Onboarding] - GET payment info by RPT id\", () => {",
							"  pm.response.to.have.status(200);",
							"  const responseJson = pm.response.json();",
							"  pm.expect(responseJson.paymentContextCode).to.be.a('string');",
							"  pm.expect(responseJson.rptId).to.be.a('string');",
							"  pm.expect(responseJson.amount).to.be.a('number');",
							"  pm.environment.set(\"PAYMENT_TOKEN\", responseJson.paymentContextCode);",
							"  pm.environment.set(\"RPTID_NM3\", responseJson.rptId);",
							"  pm.environment.set(\"AMOUNT\", responseJson.amount);",
							"  console.log(`Payment info retrieved - Amount: ${responseJson.amount}, RPT ID: ${responseJson.rptId}`);",
							"});"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Generate random RPT ID (77777777777 + 18 random digits)",
							"pm.environment.set(\"RPTID_NM3\", \"77777777777\"+_.random(302001000000000000, 302001999999999999));"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{SESSION_TOKEN}}",
							"type": "string"
						}
					]
				},
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{HOSTNAME}}/ecommerce/io/v2/payment-requests/{{RPTID_NM3}}",
					"host": [
						"{{HOSTNAME}}"
					],
					"path": [
						"ecommerce",
						"io",
						"v2",
						"payment-requests",
						"{{RPTID_NM3}}"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get all payment methods",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"[ecommerce for IO - Contextual Onboarding] - Get payment method\", function () {",
							"  pm.response.to.have.status(200);",
							"  const responseJson = pm.response.json();",
							"  let searchedPaymentMethodName = pm.environment.get(\"PAYMENT_METHOD_NAME\");",
							"  let paymentMethod = responseJson.paymentMethods.filter(p => p.name === searchedPaymentMethodName)[0];",
							"  if(paymentMethod) {",
							"    pm.environment.set(\"PAYMENT_METHOD_ID\", paymentMethod.id);",
							"    console.log(`Selected payment method: ${paymentMethod.name} (ID: ${paymentMethod.id})`);",
							"  } else {",
							"    throw Error(`No payment method found for name ${searchedPaymentMethodName}`);",
							"  }",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
			"request": {
				"auth": {
